<link rel="stylesheet" href="/<%= assetPath('css/signin.css') %>">
<div class="flex-center container">
    <main class="flex-center">
        <div id="signin-block" class="box flex-center">
            <h2>Login into DNG</h2>
            <form action="/user/forgot-pass" method="post">
                
                <div class="form-input">
                    <label for="email">Enter Your Mail Email </label>
                    <input type="email" name="email" id="email" class="input-form" placeholder="Enter your e-mail">

                </div>

                <div class="form-input" >
                    <button type="submit" value="Login" class="flex-sp-between">Send reset link <span class="iconify" data-icon="dashicons:arrow-right-alt"></span></button>
                    <span class="create-account">Don't have an account? <a href="/user/sign-up" class="register">Register Now</a></span>
                </div>
            </form>

        </div>
    </main>
</div>