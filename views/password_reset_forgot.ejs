<link rel="stylesheet" href="/<%= assetPath('css/signin.css') %>">
<div class="flex-center container">
    <main class="flex-center">
        <div id="signin-block" class="box flex-center">
            <h2>Reset Your Password</h2>
            <form action="/user/forgot-password/new-password" method="post">
                
                <input type="text" name="user-id" value="<%= user %>" style="display: none;" >
                <input type="text" name="auth_key" value="<%= auth_key %>" style="display: none;" >


                <div class="form-input">
                    <label for="password">Password</label>
                    <input type="password" name="password" id="password" class="input-form" placeholder="Enter your password" required>

                </div>

                <div class="form-input">
                    <label for="cn-password">Confirm Password</label>
                    <input type="password" name="cn-password" id="password" class="input-form" placeholder="Re - Enter your password" required>

                </div>


                <div class="form-input" >
                    <button type="submit" value="Login" class="flex-sp-between">Login <span class="iconify" data-icon="dashicons:arrow-right-alt"></span></button>
                </div>
            </form>




        </div>
    </main>
</div>